<tr id="<%= borrowing_record.id %>">
  <% unless @book_page %>
      <td><%= link_to borrowing_record.book.name, borrowing_record.book %></td>
  <% end %>
  <% unless @reader_page %>
      <td><%= link_to borrowing_record.reader.name, borrowing_record.reader %></td>
  <% end %>
  <% if @current and borrowing_record.created_at.time.months_since(1).past? %>
      <td class="overdue">
        <%= borrowing_record.created_at.strftime('%Y-%m-%d') %>
      </td>
  <% else %>
      <td>
        <%= borrowing_record.created_at.strftime('%Y-%m-%d') %>
      </td>
  <% end %>
  <% if borrowing_record.current %>
      <td><%= link_to "Return", borrowing_record, method: :put,
                      data: {confirm: "You sure?"}, class: "btn btn-danger" %></td>
  <% else %>
      <td><%= borrowing_record.updated_at.strftime('%Y-%m-%d') %></td>
  <% end %>
</tr>